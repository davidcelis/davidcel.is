<article class="h-entry py-10 sm:py-12" aria-labelledby="link-<%= link.id %>-title" >
  <div class="lg:px-8">
    <div class="lg:max-w-4xl">
      <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:px-0">
        <div class="flex flex-col items-start">
          <h2 id="link-<%= link.id %>-title" class="mt-2 text-lg font-bold text-slate-900">
            <%= link_to link.title, link.link_data["url"], class: "p-name link-primary", target: "_blank", rel: "nofollow noopener noreferrer" %>
          </h2>

          <section class="p-summary prose prose-slate prose-a:text-pink-500 hover:prose-a:text-pink-700 active:prose-a:text-pink-900 mt-1 text-base leading-7 text-slate-700 lg:prose-lg">
            <%= link.excerpt.html_safe %>
          </section>

          <% if link.excerpt != link.html %>
            <div class="mt-1 text-base leading-7 text-slate-700">
              <%= link_to "Read moreâ€¦", polymorphic_path(link), class: "link-primary" %>
            </div>
          <% end %>

          <%= render partial: "links/preview", locals: { link: link } %>

          <%= render partial: "posts/meta", locals: { post: link, index: true } %>
        </div>
      </div>
    </div>
  </div>
</article>
