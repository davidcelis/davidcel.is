<article class="h-entry note py-10 sm:py-12">
  <div class="lg:px-8">
    <div class="lg:max-w-4xl">
      <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:px-0">
        <div class="flex flex-col items-start">
          <section class="prose prose-slate prose-a:text-pink-500 hover:prose-a:text-pink-700 active:prose-a:text-pink-900 mt-1 text-base leading-7 text-slate-700 lg:prose-lg">
            <div class="e-content">
              <%= note.html.html_safe %>
            </div>
          </section>

          <% if note.media_attachments.any? %>
            <%= media_gallery_tag(note.media_attachments) %>
          <% end %>

          <div class="mt-4 flex items-center gap-4">
            <%= link_to polymorphic_path(note), class: "u-url flex items-center text-sm font-bold leading-6 link-primary" do %>
              <span class="select-none md:absolute md:-ml-6 mr-2" title="Note">
                ✏️
              </span>
              <%= timestamp(note.created_at, classes: ["dt-published"]) %>
            <% end %>

            <div class="hidden">
              <div class="u-author h-card">
                <%= image_tag "me.jpg", alt: "A photo of me on a horse looking quite dapper.", class: "u-photo" %>
                <%= link_to "David Celis", root_path, class: "p-name u-url" %>
              </div>

              <% if note.updated_at != note.created_at %>
                <%= timestamp(note.updated_at, classes: ["dt-updated"]) %>
              <% end %>

              <% note.syndication_links.each do |link| %>
                <%= link_to link.platform, link.url, class: "u-syndication" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
