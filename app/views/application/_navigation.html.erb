<div class="max-lg:absolute max-lg:top-0 max-lg:right-0 mx-auto max-w-7xl lg:px-8">
  <div class="relative py-4">
    <div class="mx-auto lg:max-w-2xl xl:max-w-5xl">
      <div class="relative flex gap-4">
        <div class="flex flex-1"></div>
        <div class="flex flex-2 justify-end lg:justify-center">
          <div data-controller="reveal" data-action="keydown.esc@window->reveal#hide" class="pointer-events-auto lg:hidden">
            <button data-action="click->reveal#show keydown.esc@window->reveal#hide" data-reveal-target="button" type="button" aria-expanded="false" aria-controls="nav-popup" aria-haspopup="menu" class="group flex items-center rounded-full bg-white/90 px-4 py-2 text-sm font-medium text-slate-800 shadow-lg shadow-slate-800/5 ring-1 ring-slate-900/5 backdrop-blur">
              Menu
              <svg viewBox="0 0 8 6" aria-hidden="true" class="ml-3 h-auto w-2 stroke-slate-500 group-hover:stroke-slate-700"><path d="M1.75 1.75 4 4.25l2.25-2.5" fill="none" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
            </button>

            <div id="nav-popup" data-reveal-target="item" data-turbo-cache="false" class="hidden">
              <div data-action="click->reveal#hide" class="fixed inset-0 z-25 h-screen w-screen bg-slate-800/40 backdrop-blur-sm opacity-100" aria-hidden="true"></div>
              <div class="fixed inset-x-4 top-8 z-50 origin-top rounded-3xl bg-white p-8 ring-1 ring-slate-900/5 opacity-100 scale-100" tabindex="-1">
                <div class="flex flex-row-reverse items-center justify-between">
                  <button data-action="click->reveal#hide" aria-label="Close menu" class="-m-1 p-1" type="button" tabindex="0">
                    <svg viewBox="0 0 24 24" aria-hidden="true" class="h-6 w-6 text-slate-500"><path d="m17.25 6.75-10.5 10.5M6.75 6.75l10.5 10.5" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                  </button>

                  <h2 class="text-sm font-medium text-slate-600">Navigation</h2>
                </div>

                <nav class="mt-6">
                  <ul class="-my-2 divide-y divide-slate-100 text-base text-slate-800">
                    <li><%= link_to "🧑‍💻 About", about_path, class: "block py-2 transition link-primary font-bold" %></li>
                    <li><%= link_to "🗃️ All Posts", posts_path, class: "block py-2 transition link-primary font-bold" %></li>
                    <li><%= link_to "📝 Articles", articles_path, class: "block py-2 transition link-primary font-bold" %></li>
                    <li><%= link_to "✏️ Notes", notes_path, class: "block py-2 transition link-primary font-bold" %></li>
                    <% if authenticated? %>
                      <li><%= link_to "⚙️ Admin", avo_path, class: "block py-2 transition link-primary font-bold" %></li>
                    <% end %>
                  </ul>
                </nav>
              </div>
            </div>
          </div>

          <nav class="hidden lg:block">
            <ul class="flex rounded-full bg-white/90 px-3 text-sm font-medium text-slate-800 shadow-lg shadow-slate-800/5 ring-1 ring-slate-900/5 backdrop-blur">
              <li><%= link_to "About", about_path, class: "relative block px-3 py-2 transition link-primary font-bold" %></li>
              <li><%= link_to "All Posts", posts_path, class: "relative block px-3 py-2 transition link-primary font-bold" %></li>
              <li><%= link_to "Articles", articles_path, class: "relative block px-3 py-2 transition link-primary font-bold" %></li>
              <li><%= link_to "Notes", notes_path, class: "relative block px-3 py-2 transition link-primary font-bold" %></li>
              <% if authenticated? %>
                <li><%= link_to "Admin", avo_path, class: "relative block px-3 py-2 transition link-primary font-bold" %></li>
              <% end %>
            </ul>
          </nav>
        </div>
        <div class="flex justify-end lg:flex-1"></div>
      </div>
    </div>
  </div>
</div>
