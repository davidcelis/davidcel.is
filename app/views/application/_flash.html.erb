<% flash.each do |type, message| %>
  <div
    data-controller="notification"
    data-notification-delay-value="5000"
    data-transition-enter-from="opacity-0 translate-x-6"
    data-transition-enter-to="opacity-100 translate-x-0"
    data-transition-leave-from="opacity-100 translate-x-0"
    data-transition-leave-to="opacity-0 translate-x-6"
    class="transition transform duration-1000 hidden absolute top-0 right-0 mt-2 mr-2"
  >
    <div class="flex flex-col gap-4 p-4 max-w-prose bg-white rounded-md border-slate-200 border-1 shadow-md" data-tooltip-target="content">
      <div class="flex justify-between">
        <h2 class="text-xl font-bold text-slate-900"><%= type.titleize %></h2>

        <button class="text-sm py-0 px-2 ml-2 rounded-sm transition active:transition-none bg-slate-100 font-medium hover:bg-pink-100 active:bg-slate-100 active:text-pink-900/60 link-primary" data-action="notification#hide">Dismiss</button>
      </div>

      <p class="whitespace-pre-wrap text-base text-slate-700"><%= message %></p>
    </div>
  </div>
<% end %>
