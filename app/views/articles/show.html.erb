<%= content_for(:page_title, @article.title) %>
<% content_for(:head) do %>
  <%= stylesheet_link_tag "prism", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "prism", "data-turbo-track": "reload" %>
<% end %>

<%= render partial: "og", locals: {article: @article} %>

<article class="py-10 sm:py-12">
  <div class="lg:px-8">
    <div class="lg:max-w-4xl">
      <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:px-0">
        <div class="text-sm text-slate-500">
          <%= timestamp(@article, full: true) %>
        </div>

        <div class="prose prose-slate prose-a:text-pink-500 hover:prose-a:text-pink-700 active:prose-a:text-pink-900 mt-1 text-base leading-7 text-slate-700 lg:prose-lg">
          <%= @article.html.html_safe %>
        </div>
      </div>
    </div>
  </div>
</article>
