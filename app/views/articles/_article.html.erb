<article class="article py-10 sm:py-12" aria-labelledby="article-<%= article.id %>-title" >
  <div class="lg:px-8">
    <div class="lg:max-w-4xl">
      <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:px-0">
        <div class="flex flex-col items-start">
          <h2 id="article-<%= article.id %>-title" class="mt-2 text-lg font-bold text-slate-900">
            <span class="select-none md:absolute md:-ml-6" title="Article">
              üìù
            </span>

            <%= link_to article.title, polymorphic_path(article), class: "link-primary" %>
          </h2>

          <section class="prose prose-slate prose-a:text-pink-500 hover:prose-a:text-pink-700 active:prose-a:text-pink-900 mt-1 text-base leading-7 text-slate-700 lg:prose-lg">
            <%= article.excerpt.html_safe %>
          </section>

          <div class="mt-4 flex items-center gap-4">
            <%= link_to polymorphic_path(article), class: "u-url flex items-center text-sm font-bold leading-6 link-primary" do %>
              <%= timestamp(article.created_at, classes: ["dt-published"]) %>
            <% end %>

            <% if article.updated_at != article.created_at %>
              <%= timestamp(article.updated_at, classes: ["dt-updated hidden"]) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
